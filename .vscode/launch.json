{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Application",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug All Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Current Test File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "cwd": "${workspaceFolder}"
        }
    ]
}